<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="volume" position="after">
                <label for="net" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="net" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="net"/>
                    <field name="net_uom_id" />
                </div>
            </div>
        </field>
    </record>

    <record id="product_variant_easy_edit_view" model="ir.ui.view">
        <field name="name">product.product.view.form.easy</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='weight']" position="before">
                <label for="net"/>
                <div class="o_row">
                    <field name="net"/>
                    <field name="net_uom_id" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
