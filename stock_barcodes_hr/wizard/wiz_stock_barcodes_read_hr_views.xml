<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_barcodes_read_hr_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.hr.form</field>
        <field name="model">wiz.stock.barcodes.read.hr</field>
        <field name="inherit_id" ref="stock_barcodes.view_stock_barcodes_read_form"/>
        <field name="arch" type="xml">
            <button name="action_undo_last_scan" position="attributes">
                <attribute name="string">Remove last row</attribute>
            </button>
            <button name="%(stock_barcodes.action_stock_barcodes_new_lot)d" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </button>
            <xpath expr="//label[@for='manual_entry']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='manual_entry']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <field name="product_tracking" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="location_id" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <xpath expr="//field[@name='_barcode_scanned']" position="after">
                <group>
                    <field name="employee_id" option="{'no_create': True}"
                       attrs="{'readonly': True, 'required': True, 'invisible': [('employee_id', '=', False)]}"
                       force_save="1"/>
                    <field name="task_id" options="{'no_create': True}"
                       attrs="{'readonly': True, 'required': [('workorder_id', '=', False), '|', ('hour_amount', '!=', 0), ('minute_amount', '!=', 0)], 'invisible': [('task_id', '=', False)]}"
                       force_save="1"/>
                    <field name="project_id" options="{'no_create': True}"
                       attrs="{'readonly': True, 'invisible': [('project_id', '=', False)]}"/>
                    <field name="workorder_id" options="{'no_create': True}"
                       attrs="{'readonly': True, 'required': [('task_id', '=', False), '|', ('hour_amount', '!=', 0), ('minute_amount', '!=', 0)], 'invisible': [('workorder_id', '=', False)]}"
                       force_save="1"/>
                    <field name="sale_id" options="{'no_create': True}"
                       attrs="{'readonly': True, 'invisible': [('workorder_id', '=', False)]}"/>
                </group>
                <group>
                    <field name="date_start"/>
                    <field name="hour_start" widget="FieldFloatTimeIgnoreBarcode"
                           attrs="{'readonly': ['|', ('employee_id', '=', False), ('workorder_id', '=', False), ('task_id', '=', False)]}"/>
                </group>
                <group>
                    <field name="hour_amount" widget="FieldFloatNumericModeOnReturn"
                        attrs="{'readonly': ['|', ('employee_id', '=', False), ('workorder_id', '=', False), ('task_id', '=', False)]}"/>
                </group>
                <group>
                    <field name="minute_amount" widget="FieldFloatNumericModeOnReturn"
                        attrs="{'readonly': ['|', ('employee_id', '=', False), ('workorder_id', '=', False), ('task_id', '=', False)]}"/>
                </group>
                <group colspan="1" col="3">
                    <group>
                        <span>
                            <button name="action_done" id="action_done_button" class="btn btn-info" style="font-weight: bold; font-size: 24px; padding: 20px;" string="Done" type="object"/>
                        </span>
                    </group>
                    <group>
                        <span>
                            <field name="worked_hours" nolabel="1" style="color: #fff; background-color: #17a2b8; border-color: #17a2b8; font-weight: bold; font-size: 24px; padding: 20px;" widget="float_time"/>
                            <div style="font-weight: bold; font-size: 12px;">WORKED TODAY</div>
                        </span>
                    </group>
                    <group>
                        <span>
                            <field name="residual_hours" nolabel="1" style="color: #fff; background-color: #17a2b8; border-color: #17a2b8; font-weight: bold; font-size: 24px; padding: 20px;" widget="float_time"/>
                            <div style="font-weight: bold; font-size: 12px;">TO BE RECORDED</div>
                        </span>
                    </group>
                </group>
            </xpath>
            <field name="product_id" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="packaging_id" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="packaging_qty" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="product_qty" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <button name="action_manual_entry" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </button>
            <xpath expr="//button[@name='action_undo_last_scan']/ancestor::*[2]" position="attributes">
                <attribute name="string">Entries logged today</attribute>
            </xpath>
            <xpath expr="//field[@name='scan_log_ids']/tree" position="attributes">
                <attribute name="string">Entries logged today</attribute>
            </xpath>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='name']" position="replace">
                <field name="employee_id"/>
                <field name="datetime_start"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="sale_id"/>
                <field name="workorder_id"/>
                <field name="hour_amount"/>
                <field name="minute_amount"/>
                <field name="duration" widget="float_time"/>
            </xpath>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='create_date']" position="replace"/>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='create_uid']" position="replace"/>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='product_id']" position="replace"/>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='product_qty']" position="replace"/>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='lot_id']" position="replace"/>
            <xpath expr="//field[@name='scan_log_ids']/kanban/field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//t[@t-esc='record.product_qty.value']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_stock_barcodes_read_hr" model="ir.actions.act_window">
        <field name="res_model">wiz.stock.barcodes.read.hr</field>
        <field name="name">Time Recording Barcodes</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_hr_form"/>
        <field name="target">current</field>
    </record>

</odoo>
