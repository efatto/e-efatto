<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_log_tree" model="ir.ui.view">
        <field name="name">stock.barcodes.read.log.tree</field>
        <field name="model">stock.barcodes.read.log</field>
        <field name="arch" type="xml">
            <tree string="Log Processing">
                <field name="employee_id"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="workorder_id"/>
                <field name="sale_id"/>
                <field name="hour_amount"/>
                <field name="minute_amount"/>
                <field name="datetime_start"/>
                <field name="duration"/>
                <field name="res_model_id"/>
                <field name="res_id"/>
            </tree>
        </field>
    </record>
    <record id="hr_attendance_log_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.log.form</field>
        <field name="model">stock.barcodes.read.log</field>
        <field name="arch" type="xml">
            <form string="Log Processing">
                <group>
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="workorder_id"/>
                    <field name="sale_id"/>
                    <field name="hour_amount"/>
                    <field name="minute_amount"/>
                    <field name="datetime_start"/>
                    <field name="duration"/>
                    <field name="res_model_id"/>
                    <field name="res_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="action_hr_attendance_log" model="ir.actions.act_window">
        <field name="name">Hr attendance log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.barcodes.read.log</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        action="action_hr_attendance_log"
        id="menu_hr_attendance_log"
        parent="hr_attendance.menu_hr_attendance_settings"
        sequence="120"
        groups="hr_attendance.group_hr_attendance_manager"/>
</odoo>
