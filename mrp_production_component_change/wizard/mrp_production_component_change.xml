<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="change_production_component" model="ir.ui.view">
        <field name="name">mrp.production.component.change</field>
        <field name="model">mrp.production.component.change</field>
        <field name="arch" type="xml">
            <form string="Change component">
                <div>
                    <group>
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to change this component or this quantity?
                </div>
                <footer>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_change_production_component"
        name="Change production component"
        res_model="mrp.production.component.change"
        src_model="mrp.production"
        view_mode="form"
        target="new"
    />

</odoo>
