<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form.component.change</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <button type="action" name="%(action_change_production_component)d" icon="fa-exchange"
                    string="Change component"/>
            </xpath>
        </field>
    </record>

</odoo>
