<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_import_bank_file" model="ir.ui.view">
            <field name="name">view.import.bank.file</field>
            <field name="model">import.bank.file</field>
            <field name="arch" type="xml">
                <form string="Import Bank File">
                    <group colspan="4">
                        <separator string="Import File" colspan="4" />
                        <field name="data" filename="name" />
                        <field name="name" colspan="2" />
                        <field name="delimeter"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="action_import"
                            string="Import" type="object" />
                        or
                        <button class="oe_link" special="cancel"
                            string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_import_bank_file" model="ir.actions.act_window">
        <field name="name">Import Bank File</field>
        <field name="res_model">import.bank.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_bank_file" />
        <field name="target">new</field>
    </record>

    <menuitem id="account_bank_import_menu"
            action="action_import_bank_file"
            parent="base.menu_localisation"
            sequence="55"/>

    </data>
</openerp>
