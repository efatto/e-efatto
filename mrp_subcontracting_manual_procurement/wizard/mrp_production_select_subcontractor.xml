<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="select_subcontractor" model="ir.ui.view">
        <field name="name">mrp.production.select.subcontractor</field>
        <field name="model">mrp.production.select.subcontractor</field>
        <field name="arch" type="xml">
            <form string="Select subcontractor">
                <div>
                    <group>
                        <field name="subcontractor_ids" widget="many2many_tags" invisible="1"/>
                        <field name="subcontractor_id" domain="[('id', 'in', subcontractor_ids)]"
                               options="{'no_create_edit': True, 'no_quick_create': True}"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to select this subcontractor?
                </div>
                <footer>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_select_subcontractor"
        name="Change production component"
        res_model="mrp.production.select.subcontractor"
        src_model="mrp.production"
        view_mode="form"
        target="new"
    />

</odoo>
