<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="wizard_mrp_bom_import_xlsx" model="ir.ui.view">
        <field name="name">Import components</field>
        <field name="model">wizard.mrp.bom.import.xlsx</field>
        <field name="arch" type="xml">
            <form string="Import components">
                <group>
                    <label for="data_file" />
                    <div>
                        <field
                            name="data_file"
                            filename="filename"
                        />
                    </div>
                    <field name="filename" invisible="1" />
                    <field name="header" readonly="1"/>
                </group>
                <footer>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="import_xlsx" string="Import" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_bom_import_xlsx"
        name="Import BOM lines from Xlsx"
        res_model="wizard.mrp.bom.import.xlsx"
        src_model="mrp.bom"
        view_mode="form"
        target="new"
        key2="client_action_multi"
    />
</odoo>