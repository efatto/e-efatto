<openerp>
  <data>
          <!--Asset depreciation lines-->
    <record model="ir.ui.view" id="view_account_asset_depreciation_line_tree">
      <field name="name">account.asset.depreciation.line.tree</field>
      <field name="model">account.asset.depreciation.line</field>
      <field name="arch" type="xml">
        <tree string="Assets Depreciation Lines" colors="blue:(move_id != False)">
          <field name="name"/>
          <field name="init_entry"/>
          <field name="move_id"/>
          <field name="amount"/>
          <field name="factor"/>
          <field name="asset_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_category_form_percent">
        <field name="name">account.asset.asset.form.percent</field>
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="account_asset_management.view_account_asset_category_form"/>
        <field name="arch" type="xml">
           <field name="method_number" position="replace">
                <field name="method_number" attrs="{'invisible': True}"/>
           </field>
           <field name="method_period" position="replace">
               <field name="method_period" attrs="{'invisible': True}"/>
           </field>
           <field name="method_number" position="after">
               <field name="method_percent" />
           </field>
           <field name="prorata" position="after">
               <field name="first_year_half"/>
           </field>
        </field>
    </record>

        <record model="ir.ui.view" id="view_account_asset_asset_form_percent">
          <field name="name">account.asset.asset.form.percent</field>
          <field name="model">account.asset.asset</field>
          <field name="inherit_id" ref="account_asset_management.view_account_asset_asset_form"/>
          <field name="arch" type="xml">
               <field name="method_number" position="replace">
                    <field name="method_number" attrs="{'invisible': True}"/>
               </field>
               <field name="method_period" position="replace">
                   <field name="method_period" attrs="{'invisible': True}"/>
               </field>
               <field name="method_number" position="after">
                    <field name="method_percent" />
               </field>
               <button name="%(account_asset_management.action_asset_modify)d" position="replace">
                   <button name="%(account_asset_management.action_asset_modify)d" attrs="{'invisible': True}"/>
               </button>
               <field name="prorata" position="after">
                    <field name="first_year_half"/>
               </field>
               <xpath expr="//form/sheet/notebook/page[@string='Depreciation Board']/field[@name='depreciation_line_ids']/tree/field[@name='amount']" position="after">
                   <field name="factor"/>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='Depreciation Board']/field[@name='depreciation_line_ids']/tree[@string='Asset Lines']" position="attributes">
                   <attribute name="create">true</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='Depreciation Board']/field[@name='depreciation_line_ids']/form/group/group/field[@name='move_id']" position="attributes">
                   <attribute name="attrs">{'readonly':[('move_check','=',True)]}</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='Depreciation Board']/field[@name='depreciation_line_ids']/tree/button[@name='create_move']" position="attributes">
                   <attribute name="context">{'create_move_from_button':True}</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='Depreciation Board']/field[@name='depreciation_line_ids']/form/group/group/field[@name='amount']" position="after">
                   <field name="factor"/>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='General']/group/group/field[@name='date_start']" position="after">
                  <field name="increase_value"
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='General']/group/group/field[@name='salvage_value']" position="after">
                   <field name="remove_value"
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
                   <field name="decrease_value"
                           attrs="{'readonly':['|',('move_line_check','=',True),('state','!=','draft')]}"
                           on_change="onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)"/>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='General']/group/group/field[@name='salvage_value']" position="attributes">
                       <attribute name="on_change">onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='General']/group/group/field[@name='purchase_value']" position="attributes">
                       <attribute name="on_change">onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)</attribute>
               </xpath>
               <xpath expr="//form/sheet/notebook/page[@string='General']/group/group/field[@name='date_start']" position="attributes">
                       <attribute name="on_change">onchange_purchase_salvage_value(purchase_value, salvage_value, increase_value, decrease_value, remove_value, date_start)</attribute>
               </xpath>
          </field>
        </record>

  </data>
</openerp>