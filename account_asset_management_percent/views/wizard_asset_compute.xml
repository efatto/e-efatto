<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_asset_depreciation_confirmation_wizard_init" model="ir.ui.view">
            <field name="name">asset.depreciation.confirmation.wizard.init</field>
            <field name="model">asset.depreciation.confirmation.wizard</field>
            <field name="inherit_id" ref="account_asset_management.view_asset_depreciation_confirmation_wizard"/>
            <field name="arch" type="xml">
                <xpath expr="//form/footer/button[@name='asset_compute']" position="attributes">
                    <attribute name="string">Post depreciation line for selected period for open assets</attribute>
                </xpath>
                <field name="period_id" position="after">
                    <field name="fy_id"/>
                    <separator colspan="2"/>
                    <field name="set_init"/>
                    <button colspan="2" string="Compute depreciation table and set manual for selected Fiscal Year if flagged as init" name="asset_set_init" type="object" class="oe_highlight"/>
                </field>
             </field>
        </record>
    </data>
</openerp>
