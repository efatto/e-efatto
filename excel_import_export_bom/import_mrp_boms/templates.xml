<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_mrp_bom_xlsx_template" model="xlsx.template">
        <field name="res_model">mrp.bom</field>
        <field name="fname">import_mrp_bom.xlsx</field>
        <field name="name">Import Mrp Bom</field>
        <field name="description">Import Mrp Bom</field>
        <field name="redirect_action" ref="mrp.mrp_bom_form_action"/>
        <field name="input_instruction">
            {
                '__IMPORT__': {
                    'mrp_bom': {
                        '_HEAD_': {
                            'A2': 'product_tmpl_id',
                            'B2': 'product_qty',
                            'C2': 'product_uom_id',
                            'D2': 'routing_id',
                        },
                        'bom_line_ids': {
                            'E2': 'product_id',
                            'F2': 'product_qty',
                            'G2': 'product_uom_id',
                        }
                    }
                },
            }
        </field>
    </record>

    <function model="xlsx.template" name="load_xlsx_template">
        <value eval="[ref('import_mrp_bom_xlsx_template')]"/>
    </function>

</odoo>
