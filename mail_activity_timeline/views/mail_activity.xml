<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="mail_activity_type_view_form">
        <field name="name">mail.activity.type.form</field>
        <field name="model">mail.activity.type</field>
        <field name="inherit_id" ref="mail.mail_activity_type_view_form"/>
        <field name="arch" type="xml">
            <field name="force_next" position="before">
                <field name="is_resource_planner"/>
            </field>
            <field name="res_model_id" position="after">
                <field name="date_start_field" domain="[('model_id', '=', res_model_id)]"
                    attrs="{'required': [('is_resource_planner', '=', True)]}"/>
                <field name="date_end_field" domain="[('model_id', '=', res_model_id)]"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mail_activity_type_view_tree">
        <field name="name">mail.activity.type.tree</field>
        <field name="model">mail.activity.type</field>
        <field name="inherit_id" ref="mail.mail_activity_type_view_tree"/>
        <field name="arch" type="xml">
            <field name="res_model_id" position="after">
                <field name="date_start_field"/>
                <field name="date_end_field"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mail_activity_view_form_board">
        <field name="name">mail.activity.boards.view.form</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail_activity_board.mail_activity_view_form_board"/>
        <field name="arch" type="xml">
            <field name="date_deadline" position="before">
                <button name="update_dates" type="object" string="Update dates"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="parent_id"/>
            </field>
        </field>
    </record>

    <record id="mail_activity_timeline" model="ir.ui.view">
        <field name="model">mail.activity</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="date_start"
                      date_stop="date_end"
                      default_group_by="user_id"
                      event_open_popup="true"
                      mode="month"
                      dependency_arrow="parent_id">
                <field name="user_id"/>
                <field name="is_resource_planner"/>
                <templates>
                    <t t-name="timeline-item">
                        <div>
                            <img t-if="record.user_id"
                                 t-attf-src="/web/image/res.users/#{record.user_id[0]}/image/24x24"
                                 t-att-title="record.user_id[1]" width="24" height="24" class="mr8"/>
                            <span name="display_name">
                                <t t-esc="record.display_name"/>
                            </span>
                        </div>
                    </t>
                </templates>
            </timeline>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mail_activity_board.open_boards_activities">
        <field name="view_mode">kanban,form,timeline</field>
    </record>

</odoo>
