<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(mail_activity_timeline.resource_planner_activities)d"
                    icon="fa-clock"
                    class="oe_stat_button"
                    string="Open Planner"
                    type="action"
                    attrs="{'invisible': [('workorder_count', '=', 0)]}"
                />
            </div>
            <field name="user_id" position="after">
                <field name="color" widget="color"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page string="Work Orders Activities">
                    <field name="workorders_activity_ids" attrs="{'readonly': True, 'invisible': [('workorders_activity_ids', '=', [])]}">
                         <tree default_order="date_start" create="0" delete="0">
                            <field name="activity_type_id" />
                            <field name="summary" />
                            <field name="parent_id" />
                            <field name="workcenter_id"/>
                            <field name="user_id"/>
                            <field name="date_deadline"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="color_active" widget="color"/>
                        </tree>
                    </field>
                    <p attrs="{'invisible': [('workorders_activity_ids', '!=', [])]}">
                        Create activities in production work orders to view something here.
                    </p>
                </page>
            </xpath>
        </field>
    </record>
    <record id="mrp_production_timeline" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp_production_calendar.mrp_production_timeline"/>
        <field name="arch" type="xml">
            <timeline position="attributes">
                <attribute name="color_field">color</attribute>
            </timeline>
        </field>
    </record>
    <record id="mrp_workorder_timeline" model="ir.ui.view">
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_production_calendar.mrp_workorder_timeline"/>
        <field name="arch" type="xml">
            <timeline position="attributes">
                <attribute name="color_field">color</attribute>
            </timeline>
        </field>
    </record>
</odoo>
