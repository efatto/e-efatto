<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_workcenter_productivity_form_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.form</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp_employee_productivity.view_mrp_workcenter_productivity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='duration']" position="after">
                <field name="amount" groups="hr_timesheet.group_timesheet_manager"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_workcenter_productivity_tree_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.tree</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp_employee_productivity.view_mrp_workcenter_productivity_tree"/>
        <field name="arch" type="xml">
            <field name="duration" position="after">
                <field name="amount" groups="hr_timesheet.group_timesheet_manager"/>
            </field>
        </field>
    </record>

</odoo>
