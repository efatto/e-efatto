<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_barcodes_read_mrp_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.mrp.form</field>
        <field name="model">wiz.stock.barcodes.read.mrp</field>
        <field name="inherit_id" ref="stock_barcodes.view_stock_barcodes_read_form"/>
        <field name="arch" type="xml">
            <field name="location_id" position="before">
                <div attrs="{'invisible': [('mrp_id', '=', False)]}">
                    <label for="mrp_id">
                    MO
                    </label>
                    <field name="mrp_id"/>
                </div>
                <field name="finished_lot_ids" invisible="True"/>
                <div attrs="{'invisible': [('finished_lot_ids', '=', False)]}">
                    <label for="produced_lot_id">
                        Produced Lot
                    </label>
                    <field name="produced_lot_id" domain="[('id', 'in', finished_lot_ids)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                </div>
            </field>
            <field name="location_id" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </field>
            <field name="packaging_id" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="packaging_qty" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <xpath expr="//field[@name='scan_log_ids']/tree/field[@name='lot_id']" position="after">
                <field name="produced_lot_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <!--
     Open wizard in current target option to avoid that the wizard is
     closed after any button click,
    -->
    <record id="action_stock_barcodes_read_mrp" model="ir.actions.act_window">
        <field name="res_model">wiz.stock.barcodes.read.mrp</field>
        <field name="name">Barcodes Read</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_mrp_form"/>
        <field name="target">current</field>
    </record>

</odoo>
