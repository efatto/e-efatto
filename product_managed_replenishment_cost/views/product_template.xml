<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_template_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']/label[@for='standard_price']" position="before">
                <field name="landed_cost" widget="monetary"
                    options="{'currency_field': 'cost_currency_id', 'field_digits': True}"
                    attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
            </xpath>
            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="string">Landed with adjustment/depreciation</attribute>
            </xpath>
        </field>
    </record>
</odoo>
