<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_forecast" model="ir.ui.view">
        <field name="name">sale.order.form.forecast</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button string="Stock Forecast" type="object" name="open_report_stock_forecast"
                        class="oe_stat_button" icon="fa-building-o" groups="base.group_user"
                        attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <button string="Stock Forecast" type="object" name="open_report_stock_forecast_line"
                        class="oe_stat_button" icon="fa-building-o" groups="base.group_user"
                        attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_level_forecast_pivot" model="ir.ui.view">
        <field name="name">Stock.forecast.pivot</field>
        <field name="model">report.stock.forecast</field>
        <field name="inherit_id" ref="stock.view_stock_level_forecast_pivot"/>
        <field name="arch" type="xml">
            <pivot position="attributes">
                <attribute name="disable_linking"></attribute>
            </pivot>
            <xpath expr="//pivot/field[@name='product_id']" position="after">
                <field name="date" interval="day" type="col"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_product_pivot" model="ir.ui.view">
        <field name="name">sale.report.pivot</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_pivot"/>
         <field name="arch" type="xml">
             <pivot position="attributes">
                <attribute name="disable_linking"></attribute>
            </pivot>
         </field>
    </record>
</odoo>
