<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_sale_forecast_pivot" model="ir.ui.view">
        <field name="name">report.stock.sale.forecast.pivot</field>
        <field name="model">report.stock.sale.forecast</field>
        <field name="arch" type="xml">
             <pivot string="Sales Stock Forecast">
                 <field name="product_id" type="row"/>
                 <field name="child_product_id" type="row"/>
                 <field name="quantity" type="measure"/>
                 <field name="cumulative_quantity" type="measure"/>
                 <field name="date" interval="day" type="col"/>
             </pivot>
        </field>
    </record>
    <record id="view_stock_sale_forecast_pivot_component" model="ir.ui.view">
        <field name="name">report.stock.sale.forecast.pivot.component</field>
        <field name="model">report.stock.sale.forecast</field>
        <field name="arch" type="xml">
             <pivot string="Sales Stock Forecast">
                 <field name="child_product_id" type="row"/>
                 <field name="name" type="row"/>
                 <field name="quantity" type="measure"/>
                 <field name="cumulative_quantity" type="measure"/>
                 <field name="date" interval="day" type="col"/>
             </pivot>
        </field>
    </record>
    <record id="view_stock_sale_forecast_graph" model="ir.ui.view">
         <field name="name">report.stock.sale.forecast.graph</field>
         <field name="model">report.stock.sale.forecast</field>
         <field name="arch" type="xml">
             <graph string="Sales Stock Forecast" type="line">
                 <field name="date" type="row" interval="week"/>
                 <field name="child_product_id" type="row"/>
                 <field name="cumulative_quantity" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_order_product_forecast_search" model="ir.ui.view">
        <field name="name">report.stock.sale.forecast.search</field>
        <field name="model">report.stock.sale.forecast</field>
        <field name="arch" type="xml">
            <search string="Sale Stock Analysis">
                <field name="date"/>
                <filter string="Date" name="year" invisible="1" date="date" default_period="this_year"/>
                <field name="order_id"/>
                <separator/>
                <field name="product_id"/>
                <group expand="0" string="Extended Filters">
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Product" name="Product" context="{'group_by':'product_id'}"/>
                    <filter string="Component" name="Component" context="{'group_by':'child_product_id'}"/>
                    <filter string="Company" name="company" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                    <separator/>
                    <filter string="Order Date" name="date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_order_report_forecast" model="ir.actions.act_window">
        <field name="name">Sale Stock Forecast</field>
        <field name="res_model">report.stock.sale.forecast</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id"></field>
        <field name="search_view_id" ref="view_order_product_forecast_search"/>
        <field name="context">{}</field>
        <field name="help">This report performs analysis on stock available for current sale order.</field>
    </record>

</odoo>
