<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_pricelist_item_form_view" model="ir.ui.view">
        <field name="name">product.pricelist.item.form</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@col='6']/div" position="inside">
                <span attrs="{'invisible': [('base', '!=', 'bom_cost')]}">Bom Cost - </span>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="listprice_categ_id" attrs="{'invisible':[('applied_on', '!=', '21_listprice_category')], 'required':[('applied_on', '=', '21_listprice_category')]}"/>
            </xpath>
            <xpath expr="//field[@name='min_quantity']" position="after">
                <field name="min_value" attrs="{'invisible':[('applied_on', '!=', '21_listprice_category')]}"/>
                <field name="max_value" attrs="{'invisible':[('applied_on', '!=', '21_listprice_category')]}"/>
            </xpath>
            <xpath expr="//field[@name='date_end']" position="attributes">
                <attribute name="attrs">{'invisible':[('applied_on', '=', '21_listprice_category')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="attributes">
                <attribute name="attrs">{'invisible':[('applied_on', '=', '21_listprice_category')]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
