<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sorp_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_unlock" position="after">
                <button name="recalculate_prices" class="ml-2 btn btn-default"
                        string="Recalculate prices" Help="Apply the current pricelist on sale state"
                        type="object" attrs="{'invisible': [('state', '!=', 'sale')]}"
                        groups="sale_order_recalculation_visibility.group_recalculation_on_sale_state"/>
            </button>
        </field>
    </record>

</odoo>
