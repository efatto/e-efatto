<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_sale_mrp_unlink_wizard" model="ir.ui.view">
        <field name="name">purchase.sale.mrp.unlink.wizard</field>
        <field name="model">purchase.sale.mrp.unlink.wizard</field>
        <field name="arch" type="xml">
            <form string="Unlink Sale Offer">
                <div>
                    <group>
                        <field name="purchase_order_id" invisible="True"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to unlink all sale order from this purchase order?
                </div>
                <footer>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_sale_mrp_unlink" model="ir.actions.act_window">
        <field name="name">Unlink Sale Offer</field>
        <field name="res_model">purchase.sale.mrp.unlink.wizard</field>
        <field name="src_model">purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_purchase_sale_mrp_unlink_wizard"/>
    </record>
    <act_window id="act_purchase_sale_mrp_unlink"
        key2="client_action_multi"
        name="Unlink Sale Offer"
        res_model="purchase.sale.mrp.unlink.wizard"
        src_model="purchase.order"
        view_id="view_purchase_sale_mrp_unlink_wizard"
        view_mode="form" target="new" view_type="form" />
</odoo>
