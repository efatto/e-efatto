<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_sale_mrp_link_wizard" model="ir.ui.view">
        <field name="name">purchase.sale.mrp.link.wizard</field>
        <field name="model">purchase.sale.mrp.link.wizard</field>
        <field name="arch" type="xml">
            <form string="Link Sale Offer">
                <div>
                    <group>
                        <field name="purchase_order_id" invisible="True"/>
                        <field name="sale_order_id"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to link sale order?
                </div>
                <footer>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_sale_mrp_link" model="ir.actions.act_window">
        <field name="name">Link Sale Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.sale.mrp.link.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
