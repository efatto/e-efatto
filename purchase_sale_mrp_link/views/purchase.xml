<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(purchase_sale_mrp_link.action_purchase_sale_mrp_link)d" type="action"
                    string="Link to Sale Order"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                        name="action_view_sales"
                        icon="fa-list"
                        class="oe_stat_button"
                        attrs="{'invisible': [('sales_order_count', '=', 0)]}">
                        <field name="sales_order_count" widget="statinfo" string="Sales"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
