<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath
        expr="//page[@name='detailed_operations_hidden']/button[@name='action_put_in_pack']"
        position="attributes"
      >
                <attribute
          name="attrs"
        >{'invisible': [('state', 'in', ('draft', 'cancel'))]}</attribute>
            </xpath>
            <xpath
        expr="//page[@name='detailed_operations_shown']/button[@name='action_put_in_pack']"
        position="attributes"
      >
                <attribute
          name="attrs"
        >{'invisible': [('state', 'in', ('draft', 'cancel'))]}</attribute>
            </xpath>
            <xpath
        expr="//page[@name='operations']/button[@name='action_put_in_pack']"
        position="attributes"
      >
                <attribute
          name="attrs"
        >{'invisible': [('state', 'in', ('draft', 'cancel'))]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
