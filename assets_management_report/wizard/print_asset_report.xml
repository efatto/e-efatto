<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_asset_report" model="ir.ui.view">
        <field name="name">Assets Report</field>
        <field name="model">wizard.asset.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Asset Report">
                <group>
                <field name="type" invisible="1"/>
                <field name="date_start"/>
                <field name="state"/>
                </group>
                <group>
                <field name="fy_id"/>
                <field name="fiscal_page_base"/>
                </group>
                <separator string="Categories" colspan="4"/>
                <field name="category_ids"/>
                <footer>
                    <button name="print_report" string="Print"
                            type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asset_report" model="ir.actions.act_window">
        <field name="name">Assets Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.asset.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        name="Assets Report"
        parent="assets_management.menu_asset_reports"
        action="action_asset_report"
        id="menu_asset_report"
        icon="STOCK_PRINT"/>

</odoo>
