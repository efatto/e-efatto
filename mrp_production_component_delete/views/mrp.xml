<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form.delete.change</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <button type="object" name="delete_production_component" icon="fa-remove"
                    string="Delete component" groups="mrp.group_mrp_manager"
                    confirm="Are you sure?"/>
            </xpath>
        </field>
    </record>

</odoo>
