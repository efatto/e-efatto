<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_bom_purchase_link" model="ir.ui.view">
        <field name="name">mrp.bom.purchase.link</field>
        <field name="model">mrp.bom.purchase.link</field>
        <field name="arch" type="xml">
            <form string="Link Purchase Order or RDP to BOM">
                <div>
                    <group>
                        <field name="purchase_order_id"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to link bom to this purchase order?
                </div>
                <footer>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_mrp_bom_purchase_link"
        name="Link Purchase Order or RDP to BOM"
        res_model="mrp.bom.purchase.link"
        src_model="mrp.bom"
        view_mode="form"
        target="new"
        key2="client_action_multi"
    />

</odoo>
