<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.evaluate</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="get_supplier_product_prices" type="object"
                        icon="fa-shopping-cart"
                        groups="account.group_account_user"
                        string="Set prices from vendors"/>
                <button name="update_product_managed_replenishment_cost" type="object"
                        icon="fa-save"
                        groups="account.group_account_user"
                        string="Update replenishment cost"/>
                <button name="add_finishing_product" type="object"
                        icon="fa-check"
                        groups="account.group_account_user"
                        string="Add finishing product"/>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/tree/field[last()]" position="after">
                <field name="weight_total" sum="Total"/>
                <field name="price_unit"/>
                <field name="price_write_date" readonly="1"/>
                <field name="price_subtotal" sum="Total"/>
            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/ancestor::page[last()]" position="inside">
                <div class="oe_clear"/>
                <group class="oe_subtotal_footer oe_right">
                    <field name="total_amount" class="oe_subtotal_footer_separator"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
