<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="mrp_production_workorder_form_view_inherit">
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='time_ids']/tree/field[@name='date_start']" position="before">
                <field name="employee_id" />
                <field name="description" />
            </xpath>
            <xpath expr="//field[@name='time_ids']/tree/field[@name='user_id']" position="replace">
            </xpath>
            <xpath expr="//field[@name='time_ids']/form//field[@name='workcenter_id']" position="before">
                <field name="employee_id" />
                <field name="description" />
            </xpath>
            <xpath expr="//field[@name='time_ids']/form//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
