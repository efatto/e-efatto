<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="corrispettivi_invoice_line_form_payment" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_it_corrispettivi.corrispettivi_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_open'][last()]" position="after">
                    <button name="invoice_pay_customer" type="object" string="Register Payment"
                        attrs="{'invisible': [('state','!=','open')]}" class="oe_highlight" groups="base.group_user"/>
                </xpath>
            </field>
        </record>

</data>
</openerp>
