<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="change_production_bom" model="ir.ui.view">
        <field name="name">mrp.production.bom.change</field>
        <field name="model">mrp.production.bom.change</field>
        <field name="arch" type="xml">
            <form string="Change Product or BoM">
                <div>
                    <group>
                        <field name="product_id"
                            domain="[('bom_ids', '!=', False), ('bom_ids.active', '=', True), ('bom_ids.type', '=', 'normal')]"/>
                        <field name="bom_id"
                            domain="['&amp;', '|',
                                        ('product_id','=',product_id),
                                        ('product_tmpl_id.product_variant_ids', 'in', product_id),
                                        ('type', '=', 'normal')]"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to change Product or BoM for this production order?
                </div>
                <footer>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_change_production_bom"
        name="Change production BoM"
        res_model="mrp.production.bom.change"
        src_model="mrp.production"
        view_mode="form"
        target="new"
    />

</odoo>
