<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="product_archiver_wizard" model="ir.ui.view">
    <field name="name">product_archiver_wizard_form</field>
    <field name="model">product.archiver</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form string="Archive Products">
            <group colspan="4">
                <field name="from_date"/>
                <field name="model"/>
            </group>
            <footer>
                <button icon="fa-check" name="archive" string="Open Products to Archive" type="object"/>
                <button special="cancel" string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_product_archive" model="ir.actions.act_window">
    <field name="name">Archive Products</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">product.archiver</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="product_archiver_wizard"/>
    <field name="target">new</field>
</record>


    <menuitem id="product_archiver" action="product_archiver.action_product_archive"
              parent="stock.menu_product_in_config_stock" sequence="100" />
</odoo>
