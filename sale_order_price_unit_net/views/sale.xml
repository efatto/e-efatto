<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

        <record model="ir.ui.view" id="sale_order_price_unit_form_view">
            <field name="name">sale.order.price.unit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//div[@name='discount']" position="after">
                    <field name="sale_price_unit_net" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="after">
                    <field name="sale_price_unit_net" />
                </xpath>
            </field>
        </record>

  </data>
</openerp>
