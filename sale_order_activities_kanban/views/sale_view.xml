<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_kanban" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sale_order_kanban"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="activity_ids" />
                <field name="activity_state" />
                <progressbar field="activity_state" colors='{"planned": "success", "overdue": "danger", "today": "warning"}'/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_bottom_left', 'text-muted')]/span" position="after">
                <div class="o_kanban_inline_block mr8">
                    <field name="activity_ids" widget="kanban_activity"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
