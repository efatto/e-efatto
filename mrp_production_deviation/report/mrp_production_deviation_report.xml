<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_production_deviation_report_tree" model="ir.ui.view">
        <field name="name">MRP production deviation report: Tree</field>
        <field name="model">mrp.production.deviation.report</field>
        <field name="arch" type="xml">
            <tree string="production deviation">
                <field name="date"/>
                <field name="name"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="quantity_expected" sum="Total"/>
                <field name="product_qty" sum="Total"/>
                <field name="quantity_deviation" sum="Total"/>
                <field name="duration_expected_rw" sum="Total"/>
                <field name="duration" sum="Total"/>
                <field name="duration_deviation_rw" sum="Total"/>
                <field name="cost_expected_rw" sum="Total"/>
                <field name="cost" sum="Total"/>
                <field name="cost_deviation_rw" sum="Total"/>
            </tree>
        </field>
    </record>
    <record id="view_mrp_production_deviation_report_search" model="ir.ui.view">
        <field name="name">Search for MRP production deviation report</field>
        <field name="model">mrp.production.deviation.report</field>
        <field name="arch" type="xml">
            <search string="production deviation">
                <field name="production_id"/>
                <filter name="year" string="Date" date="date" default_period="this_year"/>
            </search>
        </field>
    </record>

    <record id="view_mrp_production_deviation_report_pivot" model="ir.ui.view">
        <field name="name">MRP production deviation report: Pivot</field>
        <field name="model">mrp.production.deviation.report</field>
        <field name="arch" type="xml">
            <pivot string="production deviation">
                <field name="production_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="quantity_expected" type="measure"/>
                <field name="product_qty" type="measure"/>
                <field name="quantity_deviation" type="measure"/>
                <field name="cost_expected" type="measure"/>
                <field name="cost" type="measure"/>
                <field name="cost_deviation" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_mrp_production_current_cost_report_pivot" model="ir.ui.view">
        <field name="name">MRP production current cost report: Pivot</field>
        <field name="model">mrp.production.deviation.report</field>
        <field name="arch" type="xml">
            <pivot string="production deviation">
                <field name="production_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="product_qty" type="measure"/>
                <field name="duration" type="measure"/>
                <field name="cost" type="measure"/>
                <field name="cost_current" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_mrp_production_deviation_report" model="ir.actions.act_window">
        <field name="name">MRP Production Deviation Report</field>
        <field name="res_model">mrp.production.deviation.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="context">{'search_default_year': True}</field>
    </record>

    <act_window id="action_mrp_production_deviation_report_mo"
        name="MRP Production Deviation Report"
        res_model="mrp.production.deviation.report"
        src_model="mrp.production"
        view_id="view_mrp_production_deviation_report_pivot"
        view_mode="pivot,graph"
        context="{'search_default_production_id': active_id}"
        target="current"
        key2="client_action_multi"
    />

    <act_window id="action_mrp_production_current_cost_report_mo"
        name="MRP Production Current Cost Report"
        res_model="mrp.production.deviation.report"
        src_model="mrp.production"
        view_id="view_mrp_production_current_cost_report_pivot"
        view_mode="pivot,graph"
        context="{'search_default_production_id': active_id}"
        target="current"
        key2="client_action_multi"
    />

    <menuitem id="menu_mrp_production_deviation_report"
              parent="mrp.menu_mrp_reporting"
              action="action_mrp_production_deviation_report"
              name="Production Deviation"/>
</odoo>
