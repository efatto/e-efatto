<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.approved</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,sent,approved,sale</attribute>
            </xpath>
            <button name="action_cancel" position="attributes">
                <attribute name="states">draft,sent,approved,sale</attribute>
            </button>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="string">Customer Approve</attribute>
            </xpath>
            <button name="action_confirm" position="after">
                <button name="action_confirm" id="action_sale" type="object" states='approved'
                        string="Confirm" class="oe_highlight"/>
            </button>
            <xpath expr="//button[@name='print_quotation'][2]" position="attributes">
                <attribute name="states">sent,approved,sale</attribute>
            </xpath>
            <xpath expr="//button[@id='action_confirm']" position="attributes">
                <attribute name="string">Customer Approve</attribute>
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_search_inherit_quotation" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.quotation.approved</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <filter name="sales" position="attributes">
                <attribute name="domain">[('state','in',('approved','sale','done'))]</attribute>
            </filter>
        </field>
    </record>

</odoo>
