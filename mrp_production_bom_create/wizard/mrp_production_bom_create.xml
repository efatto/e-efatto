<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_production_bom_create" model="ir.ui.view">
        <field name="name">mrp.production.bom.create</field>
        <field name="model">mrp.production.bom.create</field>
        <field name="arch" type="xml">
            <form string="Create BOM">
                <div>
                    <group>
                        <field name="name"/>
                    </group>
                </div>
                <div>
                    Are you sure you want to create bom from this production?
                </div>
                <footer>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                    <button name="action_done" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_create_bom_from_production_order" model="ir.actions.act_window">
        <field name="name">Create BOM from production order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.bom.create</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_mrp_production_bom_create"/>
    </record>
    <act_window id="action_create_bom_from_production_order"
        name="Create BOM from production order"
        res_model="mrp.production.bom.create"
        src_model="mrp.production"
        view_mode="form"
        target="new"
        key2="client_action_multi"
    />

</odoo>
