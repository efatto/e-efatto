<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

       <!-- Create link to the language with name "lang_it" in ir.model.data -->
       <record id="country_lang_it" model="ir.model.data">
            <field name="name">lang_it</field>
            <field name="noupdate">TRUE</field>
            <field name="module">country_data_it</field>
            <field name="model">res.lang</field>
            <field name="res_id" model="res.lang" search="[('code', '=', 'it_IT')]"/>
       </record>

        <!-- Access link by name "lang_it" -->
        <record id="lang_it" model="res.lang">
            <field name="grouping">[3,3]</field>
            <field name="decimal_point">,</field>
            <field name="thousands_sep">.</field>
        </record>
        <record id="base.it" model="res.country">
            <field name="address_format" eval="'%(street)s\n%(street2)s\n %(zip)s %(city)s (%(state_code)s)'" />
        </record>
    </data>
</openerp>