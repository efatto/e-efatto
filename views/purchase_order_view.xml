<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.double</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="button_draft" position="attributes">
                <attribute name="states">cancel,to approve,approved,rfq confirmed,rfq sent</attribute>
            </button>
            <button name="button_approve" position="after">
                <button name="button_confirm_rfq" type="object" states='draft'
                        string="Vendor Confirm RFQ"/>
                <button name="button_confirm_rfq" type="object" states='rfq sent'
                        string="Vendor Confirm RFQ"
                        class="oe_highlight"/>
            </button>
            <xpath expr="///button[@id='draft_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="///button[@id='bid_confirm']" position="attributes">
                <attribute name="states">rfq confirmed</attribute>
            </xpath>
            <xpath expr="//button[@name='print_quotation'][2]" position="attributes">
                <attribute name="states">sent,rfq confirmed</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][1]" position="attributes">
                <attribute name="context">{'send_draft_rfq':True,'send_rfq':True}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][2]" position="attributes">
                <attribute name="states">sent,rfq confirmed</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][3]" position="attributes">
                <attribute name="states">approved</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="domain">[('state','in',('approved', 'purchase', 'done', 'rfq sent', 'rfq confirmed'))]</field>
    </record>

</odoo>
