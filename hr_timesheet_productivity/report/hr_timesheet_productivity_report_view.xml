<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_timesheet_productivity_report_search" model="ir.ui.view">
        <field name="name">Search for HR timesheet productivity report</field>
        <field name="model">hr.timesheet.productivity.report</field>
        <field name="arch" type="xml">
            <search string="timesheet productivity">
                <field name="employee_id"/>
                <filter name="month" string="Date" date="date"/>
            </search>
        </field>
    </record>
    <record id="view_hr_timesheet_productivity_report_pivot" model="ir.ui.view">
        <field name="name">HR timesheet productivity report: Pivot</field>
        <field name="model">hr.timesheet.productivity.report</field>
        <field name="arch" type="xml">
            <pivot string="timesheet productivity" disable_linking="False">
                <field name="employee_id" type="row"/>
                <field name="date" interval="day" type="col"/>
                <field name="total_timesheet" type="measure" widget="float_time"/>
                <field name="total_productivity" type="measure" widget="float_time"/>
                <field name="total_worked" type="measure" widget="float_time"/>
            </pivot>
        </field>
    </record>

    <record id="action_hr_timesheet_productivity_report" model="ir.actions.act_window">
        <field name="name">HR Timesheet/Productivity Report</field>
        <field name="res_model">hr.timesheet.productivity.report</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'search_default_month': True}</field>
    </record>

    <menuitem id="menu_hr_timesheet_productivity_report"
              parent="hr_timesheet.menu_timesheets_reports"
              action="action_hr_timesheet_productivity_report"
              name="Timesheet / Productivity"/>
</odoo>
